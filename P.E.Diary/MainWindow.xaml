<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P.E.Diary"
        xmlns:Widgets="clr-namespace:P.E.Diary.Widgets" x:Name="Window" x:Class="P.E.Diary.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="620" Width="800">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Widgets:LeftMenu x:Name="LeftMenu" HorizontalAlignment="Center" 
                          Margin="0,5,0,0" />
        <Widgets:PupilsTable x:Name="PupilsTable" HorizontalAlignment="Left" 
                                 Grid.Column="1"/>
    </Grid>
</Window>

