<UserControl x:Name="PupilsTableBody" x:Class="P.E.Diary.Widgets.PupilsTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:P.E.Diary.Widgets"
             mc:Ignorable="d" 
             Height="Auto" Width="Auto">

    <DataGrid x:Name="Table" ItemsSource="{Binding ListBoxItemCollection}" AutoGenerateColumns="False">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Фамилия" Width="*"/>
            <DataGridTextColumn Header="Имя" Width="*"/>
            <DataGridTextColumn Header="Пол" Width="*"/>
            <DataGridTextColumn Header="Возраст" Width="*"/>
            <DataGridTextColumn Header="Рост" Width="*"/>
            <DataGridTextColumn Header="Вес" Width="*"/>
        </DataGrid.Columns>
    </DataGrid>
</UserControl>
